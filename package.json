{
  "name": "partyplannerio-backend",
  "version": "0.1.0",
  "description": "REST and GraphQL API for PartyPlanner.io",
  "license": "SEE LICENSE IN LICENSE.MD",
  "author": {
    "name": "Wiktor Morawski"
  },
  "contributors": [
    {
      "name": "Wojciech Matuszewski"
    }
  ],
  "scripts": {
    "build": "npm i --save --save-exact graphql-cli && npm run update:graphql && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "update:prisma": "prisma deploy",
    "update:graphql": "graphql get-schema --project database && graphql codegen --project database",
    "update": "npm run update:prisma && npm run update:graphql",
    "dev": "source development.env && export $(cut -d= -f1 development.env) && npm run start:dev"
  },
  "dependencies": {
    "@nest-middlewares/express-session": "^5.1.1",
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/graphql": "^5.5.4",
    "@nestjs/jwt": "^0.3.0",
    "@nestjs/microservices": "^5.4.0",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/platform-fastify": "^6.0.2",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/websockets": "^5.4.0",
    "@sendgrid/mail": "^6.4.0",
    "@types/dotenv": "^6.1.0",
    "@types/passport-twitter": "^1.0.34",
    "apollo-server-express": "^2.4.8",
    "bcrypt": "^3.0.5",
    "date-fns": "^1.30.1",
    "dotenv": "^6.2.0",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "fastify": "^2.1.0",
    "google-auth-library": "^3.1.1",
    "graphql": "^14.1.1",
    "graphql-binding": "^2.5.1",
    "graphql-cli": "3.0.14",
    "graphql-tools": "^4.0.4",
    "handlebars": "^4.1.1",
    "hbs": "^4.0.3",
    "object.omit": "^3.0.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-facebook-token": "^3.3.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-spotify": "^1.0.1",
    "passport-twitter": "^1.0.4",
    "point-of-view": "^3.1.1",
    "prisma": "^1.32.2",
    "prisma-binding": "^2.3.3",
    "prisma-client-lib": "^1.27.3",
    "qs": "^6.7.0",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "rxjs": "^6.4.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.9",
    "@nestjs/testing": "^5.4.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/faker": "^4.1.5",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/passport-facebook-token": "^0.4.33",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/qs": "^6.5.3",
    "@types/ramda": "^0.26.3",
    "@types/supertest": "^2.0.7",
    "graphql-config-extension-prisma": "^0.3.0",
    "husky": "^2.3.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "src/prisma/**"
    ],
    "linters": {
      "src/**/*.{ts,tsx}": [
        "tslint --fix -p tsconfig.json -c tslint.json",
        "git add"
      ]
    }
  }
}
