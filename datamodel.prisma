type User {
  id: ID! @unique
  email: String! @unique
  firstName: String!
  lastName: String!
  password: String!
  parties: [Party!]! @relation(name: "UserParties")
  friends: [User!]! @relation(name: "UserFriends")
  pendingInvitations: [User!]! @relation(name: "PendingFriendInvitations")
  chats: [Chat!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  deleted: Boolean! @default(value: "false")
  provider: SocialMediaType
  avatar: String,
  thirdPartyId: String
}

type Party {
  id: ID! @unique
  title: String!
  description: String!
  author: User! @relation(name: "PartiesByUser")
  createdAt: DateTime!
  updatedAt: DateTime!
  location: Location!
  games: [Game!]
  isPublic: Boolean @default(value: "false")
  members: [User!]! @relation(name: "UserParties")
  startDate: DateTime! @default(value: "1970-01-01T00:00:01")
  endDate: DateTime! @default(value: "1970-01-01T00:00:01")
}

type Chat {
  id: ID! @unique
  party: Party!
  members: [User!]!
  messages: [Message!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Message {
  id: ID! @unique
  author: User!
  chat: Chat!
  content: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Game {
  id: ID! @unique
  title: String! @unique
  cover: String
  type: GameType!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Location {
  id: ID! @unique
  placeName: String!
  latitude: Float!
  longitude: Float!
}

enum GameType {
  BOARD
  PC
  CONSOLE
}
enum SocialMediaType {
  FACEBOOK
  SPOTIFY
  TWITTER
}