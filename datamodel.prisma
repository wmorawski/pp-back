type User {
  id: ID! @unique
  email: String! @unique
  firstName: String!
  lastName: String!
  password: String!
  parties: [Party!]! @relation(name: "UserParties")
  friends: [User!]!
  chats: [Chat!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  deleted: Boolean! @default(value: "false")
  socialmedia: SocialMediaType
  avatar: String
}

type Party {
  id: ID! @unique
  title: String!
  description: String!
  author: User! @relation(name: "PartiesByUser")
  createdAt: DateTime!
  updatedAt: DateTime!
  games: [Game!]
  isPublic: Boolean! @default(value: "false")
  members: [User!]! @relation(name: "UserParties")
}

type Chat {
  id: ID! @unique
  party: Party!
  members: [User!]!
  messages: [Message!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Message {
  id: ID! @unique
  author: User!
  chat: Chat!
  content: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Game {
  id: ID! @unique
  title: String! @unique
  cover: String
  type: GameType!
  createdAt: DateTime!
  updatedAt: DateTime!
}

enum GameType {
  BOARD
  PC
  CONSOLE
}
enum SocialMediaType {
  FACEBOOK
  TWITTER
  GOOGLE
}
