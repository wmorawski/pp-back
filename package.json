{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "update:prisma": "prisma deploy",
    "update:graphql": "graphql get-schema --project database; graphql codegen --project database",
    "update": "npm run update:prisma; npm run update:graphql"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/graphql": "^5.5.4",
    "@nestjs/jwt": "^0.3.0",
    "@nestjs/microservices": "^5.4.0",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/platform-fastify": "^6.0.2",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/websockets": "^5.4.0",
    "@types/dotenv": "^6.1.0",
    "apollo-server-express": "^2.4.8",
    "dotenv": "^6.2.0",
    "fastify": "^2.1.0",
    "google-auth-library": "^3.1.1",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4",
    "handlebars": "^4.1.1",
    "hbs": "^4.0.3",
    "object.omit": "^3.0.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-facebook-token": "^3.3.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-spotify": "^1.0.1",
    "point-of-view": "^3.1.1",
    "prisma-binding": "^2.3.3",
    "prisma-client-lib": "^1.27.3",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.3",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.5",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/passport-facebook-token": "^0.4.33",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/ramda": "^0.26.3",
    "@types/supertest": "^2.0.7",
    "bcrypt": "^3.0.5",
    "faker": "^4.1.0",
    "graphql-config-extension-prisma": "^0.3.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
